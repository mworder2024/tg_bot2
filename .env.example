# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rps_tournament_bot"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=rps_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=rps_tournament_bot

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_WEBHOOK_URL=https://your-domain.com/webhook
BOT_WEBHOOK_SECRET=your_webhook_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="RPS Tournament Bot"
APP_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3001

# Admin Configuration
ADMIN_TELEGRAM_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# Tournament Configuration
MAX_CONCURRENT_TOURNAMENTS=50
DEFAULT_TOURNAMENT_TIMEOUT=300
MAX_PLAYERS_PER_TOURNAMENT=64
MIN_PLAYERS_PER_TOURNAMENT=4

# Game Configuration
GAME_ROUND_TIMEOUT=30
MAX_GAME_ROUNDS=3
GAME_MOVE_TIMEOUT=30

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true