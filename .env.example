# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (SQLite for development/testing)
DB_TYPE=sqlite
DB_DATABASE=./data/gamebot.db

# PostgreSQL Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/rps_tournament_db

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Configuration
ADMIN_TELEGRAM_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# Rate Limiting Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security Configuration
CORS_ORIGIN=http://localhost:3001

# Game Configuration
GAME_ROUND_TIMEOUT=30
MAX_GAME_ROUNDS=3
GAME_MOVE_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=debug

# Development Configuration
SKIP_BOT=false

# Testing Configuration
TEST_DATABASE_URL=:memory:
TEST_LOG_LEVEL=error

# Performance Configuration
MAX_CONCURRENT_GAMES=1000
CACHE_TTL=300

# External Services (if needed)
REDIS_URL=redis://localhost:6379
WEBHOOK_URL=https://your-domain.com/webhook

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here